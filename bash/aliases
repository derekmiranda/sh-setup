# Image Processing (ImageMagick)
function backup_screenshot_to_jpg() {
  output=${1%.png}.jpg
  quality=$2
  if [ -z $2 ]
    then
      quality=85
  fi
  convert $1 -trim -quality $quality $output
}

# Utility
function stream_size() {
  wc -c | awk '{print $1/1000"K"}'
}

function cmd_on_files() {
  files="$1"
  cmd="$2"
  for f in $files
  do
    $cmd $f 
  done
}

function import_lib() {
  for f in $* 
  do
    f="${f#lib/}"
    f="${f%.js}"
    printf "\n$f" >> index.js
  done
}

function copypath() {
  path=$PWD
  if [[ $# -gt 0 ]]
    then
      path=$PWD/$1
  fi
  printf "%s" "$path" | pbcopy
}

